<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm">
  <%= image_tag(@movie.picture_url, width: '70%') if @movie.picture.present? %>
  </div>
<div class="col-sm">
  <div class="row">
  <p>
    <strong>Title:</strong>
    <%= @movie.title %>
  </p>
  </div>
  <div class="row">
  <p>
    <strong>Description:</strong>
    <%= @movie.description %>
  </p>
  </div>
</div>
</div>
<div class="row">
<h3>User Reviews</h3>
</div>
<div class=".col-xl">
<% @reviews.each do |review| %>
  <div>
    <p><%= review.review %> â˜†'s  <strong> -<%= review.headline %></strong></p>
